<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <sql-query name="SysModularQuery">
		<![CDATA[
            select * from sys_modular where 1 = 1
            <<and id = :id>> 
            <<and code in :code>>
		]]>
    </sql-query>
</hibernate-mapping>
